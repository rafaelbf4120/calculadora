<script>
    // --- L√ìGICA DE ABAS ---
    function openTab(tabName, btnElement) {
        // Esconde todos os conte√∫dos
        const contents = document.getElementsByClassName('tab-content');
        for (let i = 0; i < contents.length; i++) {
            contents[i].classList.remove('active');
        }

        // Remove classe ativa de todos os bot√µes
        const btns = document.getElementsByClassName('tab-btn');
        for (let i = 0; i < btns.length; i++) {
            btns[i].classList.remove('active');
        }

        // Ativa o selecionado
        document.getElementById('tab-' + tabName).classList.add('active');
        btnElement.classList.add('active');
    }

    // --- L√ìGICA DE C√ÅLCULO ---
    const Calc = {
        fmt: (n) => isNaN(n) ? '0.00' : parseFloat(n).toFixed(2),
        ceil: (n) => isNaN(n) ? 0 : Math.ceil(n),
        val: (id) => parseFloat(document.getElementById(id).value) || 0,

        tinta: function(mode) {
            let area = this.val('tinta_area');
            let balde = this.val('tinta_baldes');
            const RENDIMENTO = 35.0; 

            if (mode === 'area') {
                balde = area / RENDIMENTO;
                document.getElementById('tinta_baldes').value = area ? balde.toFixed(2) : '';
            } else {
                area = balde * RENDIMENTO;
                document.getElementById('tinta_area').value = balde ? area.toFixed(2) : '';
            }

            document.getElementById('res_tinta_litros').innerText = this.fmt(balde * 18) + ' L';
            document.getElementById('res_tinta_solvente').innerText = this.ceil(balde * 0.20);
        },

        aspersao: function(mode) {
            let area = this.val('asp_area');
            let kg = this.val('asp_kg');
            const CONSUMO = 3.0; 

            if (mode === 'area') {
                kg = area * CONSUMO;
                document.getElementById('asp_kg').value = area ? kg.toFixed(2) : '';
            } else {
                area = kg / CONSUMO;
                document.getElementById('asp_area').value = kg ? area.toFixed(2) : '';
            }

            let dropKg = area * 0.35;
            document.getElementById('res_asp_sacas').innerText = this.ceil(kg / 25);
            document.getElementById('res_asp_drop_kg').innerText = this.fmt(dropKg) + ' kg';
            document.getElementById('res_asp_drop_sacas').innerText = this.ceil(dropKg / 25);
        },

        extrudado: function(mode) {
            let area = this.val('ext_area');
            let kg = this.val('ext_kg');
            const CONSUMO = 6.0; 

            if (mode === 'area') {
                kg = area * CONSUMO;
                document.getElementById('ext_kg').value = area ? kg.toFixed(2) : '';
            } else {
                area = kg / CONSUMO;
                document.getElementById('ext_area').value = kg ? area.toFixed(2) : '';
            }

            let dropKg = area * 0.50;
            document.getElementById('res_ext_sacas').innerText = this.ceil(kg / 25);
            document.getElementById('res_ext_drop_kg').innerText = this.fmt(dropKg) + ' kg';
            document.getElementById('res_ext_drop_sacas').innerText = this.ceil(dropKg / 25);
        },

        // --- NOVO C√ÅLCULO DE LAMINADO ---
        laminado: function(mode) {
            let area = this.val('lam_area');
            let kg = this.val('lam_kg');
            // Obt√©m o fator de consumo selecionado no dropdown (0.2, 0.3, 0.4 ou 0.5)
            let fatorConsumo = parseFloat(document.getElementById('lam_tipo').value);
            const PESO_LATA = 14.0;

            if (mode === 'area') {
                kg = area * fatorConsumo;
                document.getElementById('lam_kg').value = area ? kg.toFixed(2) : '';
            } else {
                area = kg / fatorConsumo;
                document.getElementById('lam_area').value = kg ? area.toFixed(2) : '';
            }

            // C√°lculo das latas
            document.getElementById('res_lam_latas').innerText = this.ceil(kg / PESO_LATA);
        },

        cola: function() {
            let tacha = this.val('cola_tacha');
            let tachao = this.val('cola_tachao');
            let seg = this.val('cola_seg');

            let totalKg = (tacha * 0.10) + (tachao * 0.25) + (seg * 0.50);

            document.getElementById('res_cola_kg').innerText = this.fmt(totalKg) + ' kg';
            document.getElementById('res_cola_latas').innerText = this.ceil(totalKg / 5);
        }
    };
</script>

